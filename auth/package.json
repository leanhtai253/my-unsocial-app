{
  "name": "auth",
  "version": "1.0.0",
  "description": "Authentication microservice for social media app.",
  "main": "src/index.ts",
  "scripts": {
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "prettier": "prettier --check ./src/**/*.ts",
    "prettier:fix": "prettier --write ./src/**/*.ts",
    "start:dev": "nodemon src/index.ts",
    "start": "echo starting prod server",
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watchAll --detectOpenHandles --no-cache"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "setupFilesAfterEnv": ["./src/test-utils/setup-after-env.ts"]
  },
  "keywords": [],
  "author": "Oliver Le",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "mongoose": "^7.6.3",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": ">=3.3.1 <5.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.8.9",
    "@types/supertest": "^2.0.15",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "mongodb-memory-server": "^9.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier:fix",
      "npm run lint",
      "npm run test"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
